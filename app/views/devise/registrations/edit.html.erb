<div class="form-group">
  
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel">
        <div class="panel-responsive">
          <h1>Edit Data <%= resource_name.to_s.humanize %></h1>

          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :nama %>
                <%= f.text_field :nama, class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :alamat %>
                <%= f.text_field :alamat, class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :foto %><br />
                <%= f.file_field :foto %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
                <% if @minimum_password_length %>
                <br />
                <em><%= @minimum_password_length %> characters minimum</em>
                <% end %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
              </div>

              <div class="field">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control' %>
              </div>

              <div class="actions">
                <%= f.submit "Update" %>
              </div>
              <% end %>
            </div>
          </div>


          <h2>Cancel my account</h2>

          <h2>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></h2>
          <%= link_to "Back", :back, class: 'btn btn-sm btn-default' %>

        </div>
      </div>
    </div>
  </div>
</div>